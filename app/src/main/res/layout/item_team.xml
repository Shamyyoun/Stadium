<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="6dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/SingleEllipsizedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="الأهلي"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/tv_captain_name"
            style="@style/SingleEllipsizedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/captine_icon"
            android:gravity="right"
            android:text="كابتن. محمود الشامي"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_logo"
        style="@style/CroppedImageView"
        android:layout_width="@dimen/small_team_image_size"
        android:layout_height="@dimen/small_team_image_size"
        android:layout_marginLeft="15dp"
        android:src="@drawable/default_image"
        app:riv_border_color="@color/light_gray"
        app:riv_border_width="0.5dp"
        app:riv_oval="true" />
</LinearLayout>