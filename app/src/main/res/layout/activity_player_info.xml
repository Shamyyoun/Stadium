<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:paddingBottom="12dp"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/linear_image"
            android:layout_width="@dimen/player_info_stroke_size"
            android:layout_height="@dimen/player_info_stroke_size"
            android:background="@drawable/green_strokked_circle"
            android:gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_image"
                style="@style/CroppedImageView"
                android:layout_width="@dimen/player_info_image_size"
                android:layout_height="@dimen/player_info_image_size"
                android:src="@drawable/default_team_image"
                app:riv_oval="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_class"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/green_strokked_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignRight="@+id/linear_image"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mediam_star"
                />

            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/very_small_text"
                android:text="4.5"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>